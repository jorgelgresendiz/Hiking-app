<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>All Hikes</title>
  </head>
  <body>
    <h1>All Hikes</h1>

    <br />
    <tbody>
      <% users.forEach(function(user) { %> <% user.hikes.forEach(function(h) {
      %>
      <tr>
        <td><%= h.name %></td>
        |
        <td><%= h.location %></td>
        <td><a href="/reviews">Reviews</a></td>
        <td>
          <form action="/hikes/<%= h._id %>?_method=DELETE" method="POST" class="secondary-content">
            <button type="submit">X</button>
          </form>
          
          </form>
        </td>
      </tr>
      <% }); %> <% }); %>
    </tbody>
    <br />
    <br />
    <a href="/hikes/new">Add a New Hike</a>
  </body>
</html>
